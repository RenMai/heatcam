<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_red_to_blue_list"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="261dp"
        android:layout_height="264dp"
        android:layout_marginTop="100dp"
        android:contentDescription="TODO"
        android:text="ImageUser"
        app:layout_constraintEnd_toStartOf="@+id/vprogressbar3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginTop="172dp"

        android:layout_marginBottom="25dp"
        android:fontFamily="sans-serif-light"
        android:text="Information of temperature"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#010D5A"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="367dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-thin"
        android:text="TextView"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textColor="#8E1301"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/vprogressbar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="90dp"
        android:layout_height="263dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="11dp"
        android:progressDrawable="@drawable/verticalprogressbar"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/start3"
        android:layout_width="89dp"
        android:layout_height="47dp"
        android:layout_marginTop="24dp"
        android:text="START"
        app:layout_constraintEnd_toEndOf="@+id/vprogressbar3"
        app:layout_constraintTop_toBottomOf="@+id/vprogressbar3" />

    <TextView
        android:id="@+id/textDistance"
        android:layout_width="296dp"
        android:layout_height="66dp"
        android:text="Distance: "
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textMeasuring"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.837" />

    <TextView
        android:id="@+id/textMeasuring"
        android:layout_width="292dp"
        android:layout_height="64dp"
        android:layout_marginBottom="48dp"
        android:text="Measuring temp: FALSE"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/QRbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="QR-code"
        app:layout_constraintBottom_toTopOf="@+id/vprogressbar3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.595" />

</androidx.constraintlayout.widget.ConstraintLayout>